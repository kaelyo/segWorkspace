<configuration>
  <property>
    <name>hbase.rootdir</name>
    <value>hdfs://JXC01:9000/hbase</value>
  </property>
  <property>
    <name>hbase.master</name>
    <value>JXC01:60000</value>
  </property>
  <property>
    <name>hbase.cluster.distributed</name>
    <value>true</value>
  </property>
  <property>
    <name>hbase.zookeeper.property.dataDir</name>
    <value>/home/zookeeper/zookeeper/data</value>
  </property>
  <property> 
    <name>hbase.tmp.dir</name>  
    <value>/home/hbase/hbase/tmp/</value> 
  </property> 
  <property>
    <name>hbase.zookeeper.quorum</name>
    <value>JXC01,JXC02,JXC03</value>
  </property> 
  <property>
    <name>hbase.zookeeper.property.clientPort</name>
    <value>2181</value>
  </property>

  <property>
<name>hbase.client.write.buffer</name>
<value>10485760</value>
<description></description>
</property>

<property>
  <name>zookeeper.session.timeout</name> 
  <value>180000</value>
  <description></description>
</property>
 
<property>
  <name>hbase.rpc.timeout</name> 
  <value>300000</value>
  <description></description>
</property>

</configuration>
