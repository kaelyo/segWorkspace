	<form id='follow' method='post' class="form" style="width:370px;">
		<fieldset style="width:350px;">
			<div class="panel">
                <span>客户:</span>
                <input type='text' id="customer" name='customer'  style="width:200px;" disabled="disabled"/>
                <input type='hidden' id="taskId" name="taskId" />
                 <input type='hidden' id="dispatch_id" name="dispatch_id" />
            </div>
            <div class="panel">
                <span>电工:</span>
                
                <select id='company' name='company' style="width:204px;" onchange='initCompanyno();'>
                	<option value='-1' selected='true'>全部</option>
                </select>
                
               <!--  <select size="1" name="type" id="type" style="width:204px;" autocomplete="on">
